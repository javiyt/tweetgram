[Unit]
Description=Tweetgram Bot
ConditionPathExists=/home/tweetgram/bin/tweetgram
After=network.target
[Service]
Type=simple
WorkingDirectory=/home/tweetgram/bin/
ExecStart=/home/tweetgram/bin/tweetgram
Restart=always
RestartSec=5
RuntimeMaxSec=21600
StartLimitInterval=400
StartLimitBurst=5
SyslogIdentifier=tweetgram
[Install]
WantedBy=multi-user.target
